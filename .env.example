# ── SHARED INFRASTRUCTURE ────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_before_running

# ── PLATFORM API (:8000) ─────────────────────────────────────
PLATFORM_DATABASE_URL=postgresql+asyncpg://postgres:change_this@platform-db:
5432/platform_db
PLATFORM_SECRET_KEY=<generate: python -c "import secrets;
print(secrets.token_hex(32))">
PLATFORM_ALGORITHM=HS256
PLATFORM_ADMIN_JWT_EXPIRE_MINUTES=60
SUPER_ADMIN_SECRET=<separate secret for /admin/* route protection>
PLATFORM_API_URL=http://platform-api:8000

# ── IDENTITY SERVICE (:8001) ──────────────────────────────────
IDENTITY_DATABASE_URL=postgresql+asyncpg://postgres:change_this@identity-db:
5432/identity_db
IDENTITY_SECRET_KEY=<DIFFERENT from PLATFORM_SECRET_KEY -- generate
separately>
IDENTITY_ALGORITHM=HS256
IDENTITY_USER_JWT_EXPIRE_MINUTES=30
IDENTITY_WEBHOOK_SECRET=<secret for signing mock webhook payloads>
IDENTITY_SERVICE_URL=http://identity-service:8001

# ── TRADE ENGINE (:8002) ─────────────────────────────────────
TRADE_DATABASE_URL=postgresql+asyncpg://postgres:change_this@trade-db:5432/t
rade_db
TRADE_SECRET_KEY=<DIFFERENT from both others -- generate separately>
TRADE_ALGORITHM=HS256
COINGECKO_API_URL=https://api.coingecko.com/api/v3
SETTLEMENT_INTERVAL_SECONDS=60
IDENTITY_SERVICE_URL=http://identity-service:8001